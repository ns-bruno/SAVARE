<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center_horizontal" >

        <EditText
            android:id="@+id/cadastro_usuario_edit_chave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/chave_empresa" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/cadastro_usuario_edit_codigo_empresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/codigo_empresa" />

        <EditText
            android:id="@+id/cadastro_usuario_edit_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textCapWords"
            android:hint="@string/nome_completo" />

        <EditText
            android:id="@+id/cadastro_usuario_edit_codigo_vendedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/codigo_vendedor"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/cadastro_usuario_edit_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textCapCharacters"
            android:hint="@string/nome_login" />

        <EditText
            android:id="@+id/cadastro_usuario_edit_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/senha" />

        <EditText
            android:id="@+id/cadastro_usuario_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/email" />

        <EditText
            android:id="@+id/cadastro_usuario_edit_ip_servidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/ip_servidor" />

        <EditText
            android:id="@+id/cadastro_usuario_edit_usuario_servidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/usuario_servidor" />

        <EditText
            android:id="@+id/cadastro_usuario_edit_senha_servidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/senha_servidor" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cadastro_usuario_edit_pasta_servidor"
            android:layout_gravity="center_horizontal"
            android:hint="@string/pasta_ftp"
            android:text="/" />

    </LinearLayout>
    

</ScrollView>
