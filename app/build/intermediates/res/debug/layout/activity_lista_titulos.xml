<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_total_a_receber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/total_a_receber"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/text_credito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/credito_acumulado"
            android:gravity="center_horizontal" />

    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/activity_lista_titulos_text_total_a_receber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/total_a_receber"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/activity_lista_titulos_text_credito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/credito_acumulado"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_weight="1" >

        <ExpandableListView
            android:id="@+id/activity_lista_titulos_expandable_lista_titulos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:childDivider="@color/azul_escuro"
            android:childIndicator="@color/rosa"
            android:divider="@color/azul"
            android:dividerHeight="2dp" >

        </ExpandableListView>
        
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Dropbox/Forca%20de%20Venda%20Movel/Codigo%20Fonte/SAVARE_Studio/app/src/main/res/layout/activity_lista_titulos.xml -->